# FortifAI Environment Variables Template

# Database Configuration
DATABASE_URL=postgresql://fortifai:fortifai_secure_password@localhost:5432/fortifai_db
DB_USER=fortifai
DB_PASSWORD=fortifai_secure_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fortifai_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# Service URLs (for inter-service communication)
API_URL=http://localhost:8000
ML_ENGINE_URL=http://localhost:5000
ALERT_SERVICE_URL=http://localhost:5001
AUTH_SERVICE_URL=http://localhost:5002

# Email Notifications (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=alerts@fortifai.local
ALERT_EMAIL_TO=admin@example.com

# Slack Notifications
SLACK_WEBHOOK_URL=

# Microsoft Teams Notifications
TEAMS_WEBHOOK_URL=

# Data Collector
COLLECTION_INTERVAL=30

# Debug Mode (set to False in production)
DEBUG=True
